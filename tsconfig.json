{
  "compilerOptions": {
    "lib": [
      "es2019"
    ],
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "types",
    "**/*.spec.ts"
  ]
}
